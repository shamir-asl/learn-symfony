                <td>{{ agreeble_pizza.dateDiff ? agreeble_pizza.dateDiff.format('%y year(s), %m month(s), %d day(s)') : '' }}</td>
                <td>
                    <a href="{{ path('agreeble_pizza_show', {'id': agreeble_pizza.id}) }}">show</a>
                    <a href="{{ path('agreeble_pizza_edit', {'id': agreeble_pizza.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('agreeble_pizza_new') }}">Create new</a>
{% endblock %}
