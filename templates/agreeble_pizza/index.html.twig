{% extends 'base.html.twig' %}

{% block title %}AgreeblePizza index{% endblock %}

{% block body %}
    <h1>AgreeblePizza index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>DateDiff</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for agreeble_pizza in agreeble_pizzas %}
            <tr>
                <td>{{ agreeble_pizza.id }}</td>
